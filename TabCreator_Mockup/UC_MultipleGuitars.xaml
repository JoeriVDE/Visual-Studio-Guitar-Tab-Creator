                <TextBlock Text="1" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20"></TextBlock>
                <Image Source="Resources/Guitar_Logo.png" Grid.Column="1" Margin="15"></Image>
                <TextBlock Text="Guitar 1" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20" Grid.Column="2"></TextBlock>
            </Grid>
        </Button>
        <Button >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Text="2" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20"></TextBlock>
                <Image Source="Resources/Guitar_Logo.png" Grid.Column="1" Margin="15"></Image>
                <TextBlock Text="Guitar 2" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20" Grid.Column="2"></TextBlock>
            </Grid>
        </Button>
        <Button >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Text="3" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20"></TextBlock>
                <Image Source="Resources/Guitar_Logo.png" Grid.Column="1" Margin="15"></Image>
                <TextBlock Text="Guitar 3" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20" Grid.Column="2"></TextBlock>
            </Grid>
        </Button>
        <Button >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Text="4" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20"></TextBlock>
                <Image Source="Resources/Guitar_Logo.png" Grid.Column="1" Margin="15"></Image>
                <TextBlock Text="Guitar 4" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20" Grid.Column="2"></TextBlock>
            </Grid>
        </Button>

        <Button >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Text="5" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20"></TextBlock>
            <Image Source="Resources/Guitar_Logo.png" Grid.Column="1" Margin="15"></Image>
            <TextBlock Text="Guitar 5" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20" Grid.Column="2"></TextBlock>
        </Grid>
        </Button>
            
        <Button >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Text="6" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20"></TextBlock>
                <Image Source="Resources/Guitar_Logo.png" Grid.Column="1" Margin="15"></Image>
                <TextBlock Text="Guitar 6" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20" Grid.Column="2"></TextBlock>
            </Grid>
        </Button>


    </StackPanel>

    </ScrollViewer>
</UserControl>
