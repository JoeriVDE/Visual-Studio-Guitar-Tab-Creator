<UserControl x:Class="TabCreator_Mockup.UC_GuitarBottom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabCreator_Mockup"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Name="grd_Guitar" Grid.Column="0">
            <Image Name="img_GuitarBg" Source="Resources/wood.jpg" Stretch="Fill"></Image>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            
            
            <Button Name="btn_Play" Grid.Row="0" Margin="0,5">
                <Image Source="Resources/Icon_Play.png"></Image>
            </Button>

            <Button Name="btn_Stop" Grid.Row="1" Margin="0,5">
                <Image Source="Resources/Icon_Stop.png"></Image>
            </Button>
        </Grid>
    </Grid>
</UserControl>
